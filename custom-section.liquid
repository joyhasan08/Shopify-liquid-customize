{% liquid
  
    assign show_subtitle = section.settings.show_subtitle
    assign mobile_width = section.settings.mobile-width
    assign alignment = section.settings.alignment
    assign desktop_width = section.settings.desktop-width

%}

{% style %}

  @media (min-width: 768px){
    .parent{
            width: {{ desktop_width }}px;
    margin: auto;
        
    }
    
  }
  @media (max-width: 767px){
    .parent{
            width: {{ mobile_width }}px;
    margin: auto;   
    }
  }
{% endstyle %}





<div class="bg-gray-200 py-10 w-full">
<div class="parent flex flex-col md:flex-row justify-center items-center gap-10">

        <div class="image-section w-full"> 
            <img src="{{ section.settings.section-image | img_url }}" alt="" width="100%" height="100%">
        </div>


    <div class="flex justify-{{ section.settings.justify-alignment }} w-full">
        
        <div class=" text-section text-{{ alignment }} ">
            {% if show_subtitle == true %}
        
        <h4>{{ section.settings.header-subtitle }}</h4>

        {% endif %}
        <h2> {{ section.settings.header-title }} </h2> 
        <p>{{ section.settings.body-text }}</p>
        </div>           
    </div>


</div>
</div>




{% schema %}
{
  "name": "Image With Text 2",
  "settings": [
    {
        "type": "range",
        "id": "desktop-width",
        "label": "Desktop Width",
        "min": 0,
        "max": 1920,
        "step": 20,
        "default": 1420
    },
    {
        "type": "number",
        "id": "mobile-width",
        "label": "Mobile Width",
        "default": 250
    },
    {
        "type": "select",
        "id": "justify-alignment",
        "label": "Justify Content",
        "options": [
            {
                "value": "start",
                "label": "Start"
            },
            {
                "value": "center",
                "label": "Center",
            },
            {
                "value": "end",
                "label": "End"
            }
        ]
    },
    {
        "type": "text",
        "id": "header-title",
        "label": "Header Title",
        "default": "Eita first Header Text"
    },
    {
        "type": "text",
        "id": "header-subtitle",
        "label": "Sub-Title",
        "default": "Enter Subbtitle"
    },
    {
        "type": "checkbox",
        "id": "show_subtitle",
        "label": "Show Subtitle",
        "default": true
    },
    {
        "type": "text",
        "id": "body-text",
        "label": "Description",
        "default": "Enter Description"
    },
    {
        "type": "radio",
        "id": "alignment",
        "label": "Text Alignment",
        "options": [
            {
                "value": "left",
                "label": "Left"
            },
            {
                "value": "center",
                "label": "Center"
            },
            {
                "value": "right",
                "label": "Right"
            }
        ]
    },
    {
        "type": "image_picker",
        "id": "section-image",
        "label": "Image"
    }
    
  ],
  "presets": [
    {
      "name": "Image With Text 2"
    }
  ]
}
{% endschema %}