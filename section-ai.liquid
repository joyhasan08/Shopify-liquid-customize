  "name": "Watch card (glass)",
  "settings": [
    { "type": "text", "id": "title", "label": "Card title", "default": "Basic" },
    { "type": "image_picker", "id": "bg_image", "label": "Background image (optional)" },
    { "type": "image_picker", "id": "product_image", "label": "Product image" },
    { "type": "text", "id": "product_image_alt", "label": "Product image alt", "default": "Product image" },
    { "type": "url", "id": "button_link", "label": "Button link" },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "SHOP NOW" },
    { "type": "checkbox", "id": "open_in_new_window", "label": "Open link in new window", "default": false }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature row",
      "settings": [
        { "type": "text", "id": "label", "label": "Feature label", "default": "Elastisch" },
        { "type": "range", "id": "stars", "label": "Stars", "min": 0, "max": 5, "step": 1, "default": 3 }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [{ "name": "Watch card (glass)", "category": "Product" }]
}
